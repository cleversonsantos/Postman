pipeline {
    agent any
 
    environment {
        POSTMAN_COLLECTION = 'ServeRest_API.postman_collection.json'
        POSTMAN_ENVIRONMENT = 'Serverest.postman_environment.json'
    }
 
    stages {
        stage('Clonar Repositório') {
            steps {
                checkout scm
            }
        }
 
        stage('Instalar Dependências') {
            steps {
                script {
                    // Instala o Newman
                    bat 'npm install -g newman'  // Usando 'bat' ao invés de 'sh' para Windows
                }
            }
        }
 
        stage('Executar Testes Postman') {
            steps {
                script {
                    // Executa o Newman com a coleção do Postman
                    if (fileExists(POSTMAN_ENVIRONMENT)) {
                        bat "newman run ${POSTMAN_COLLECTION} -e ${POSTMAN_ENVIRONMENT}"  // Usando 'bat'
                    } else {
                        bat "newman run ${POSTMAN_COLLECTION}"  // Usando 'bat'
                    }
                }
            }
        }
    }
 
    post {
        always {
            cleanWs()
        }
    }
}